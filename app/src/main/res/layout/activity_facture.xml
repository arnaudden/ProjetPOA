<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="projet.poa.uqac.colocmanager.Activities.FactureActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:text="Facture :"
                android:textSize="20dp"
                android:editable="false"
             />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Titre de la facture"
                android:id="@+id/id_Facture_Titre"
                android:singleLine="true"
                android:paddingTop="20dp"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:text="Magasin :"
                android:textSize="20dp"
                android:editable="false"
                 />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Magasin d&apos;achat"
                android:id="@+id/id_Facture_Magasin"
                android:singleLine="true"
                android:paddingTop="20dp"
                android:textSize="20dp"
                android:onClick="saveUser" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:text="Date :"
                android:textSize="20dp"
                android:editable="false"
                 />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Date d&apos;achat"
                android:id="@+id/id_Facture_date"
                android:singleLine="true"
                android:paddingTop="20dp"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:text="Payeur :"
                android:textSize="20dp"
                android:editable="false"
                android:id="@+id/" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Nom du payeur"
                android:id="@+id/id_Facture_Payeur"
                android:singleLine="true"
                android:paddingTop="20dp"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:text="Participant :"
                android:textSize="20dp"
                android:editable="false"
                android:id="@+id/" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Liste des participants"
                android:id="@+id/editText2"
                android:singleLine="true"
                android:paddingTop="20dp"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:text="Prix :"
                android:textSize="20dp"
                android:editable="false"
                android:id="@+id/" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Prix de l&apos;achat"
                android:id="@+id/editText3"
                android:singleLine="true"
                android:paddingTop="20dp"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="Facture a été réglé"
                android:id="@+id/checkBox"
                android:layout_weight="0.18" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:id="@+id/button"
        android:text="Enregister"
        android:textSize="40dp"
        android:onClick="" />

</RelativeLayout>
